# coding: utf-8
require 'fileutils'
task :default do
  t = 'P07'
  y = '10'
  e = 'g_FuelFillStation'
  1.upto(14) {|i|
    s = sprintf('%02d', i)
    dst = "#{t}-#{y}_#{s}.geojson"
    FileUtils.rm(dst) if File.exist?(dst)
    sh "ogr2ogr -f GeoJSON #{dst} ~/Downloads/#{t}-#{y}_#{s}_GML/#{t}-#{y}_#{s}-#{e}.shp"
    buf = File.open(dst).read.split("\n")
    File.open(dst, 'w') {|w|
      n = 0
      buf.each {|l|
        n += 1
        if n == 3
          w.print "\"source\": \"国土数値情報（燃料給油所データ）　国土交通省\",\n"
        else 
          w.print l, "\n"
        end
      } 
    }
  }
end
